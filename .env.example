# =============================================================================
# OpenKMS Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_PASSWORD=your-secure-database-password-here
POSTGRES_USER=openkms
POSTGRES_DB=openkms
DATABASE_URL=postgresql://openkms:your-secure-database-password-here@postgres:5432/openkms

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# Security Configuration
# =============================================================================
# Generate a secure secret key for JWT tokens
SECRET_KEY=your-very-secure-secret-key-change-this-in-production
ALGORITHM=HS256

# Token expiration times (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# =============================================================================
# Application Configuration
# =============================================================================
DEBUG=False
LOG_LEVEL=INFO
ENVIRONMENT=production

# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:8080

# Backend API URL
BACKEND_URL=http://localhost:8000

# =============================================================================
# File Upload Configuration
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_EXTENSIONS=.pdf,.docx,.doc,.txt,.jpg,.jpeg,.png,.gif
UPLOAD_DIRECTORY=uploads

# =============================================================================
# Email Configuration (for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@openkms.com

# =============================================================================
# Production Configuration
# =============================================================================
DOMAIN_NAME=your-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost,127.0.0.1

# =============================================================================
# Monitoring and Logging
# =============================================================================
ENABLE_METRICS=true
LOG_LEVEL_PROD=INFO
ENABLE_HEALTH_CHECK=true

# =============================================================================
# Development Override Configuration
# =============================================================================
# For development, create a .env.override file with these values:
# DEBUG=True
# LOG_LEVEL=DEBUG
# SECRET_KEY=development-secret-key
# POSTGRES_PASSWORD=dev_password
# FRONTEND_URL=http://localhost:8080
# ALLOWED_HOSTS=localhost,127.0.0.1