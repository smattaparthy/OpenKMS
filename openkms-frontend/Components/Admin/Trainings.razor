    <div class="card">
        <div class="card-body">
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <h1 class="card-title" style="font-size: var(--text-3xl);">Training Management</h1>
                    <p class="card-text">Manage training sessions, courses, and scheduling</p>
                </div>
                <button class="btn btn-secondary" @onclick="NavigateBack">
