<!-- Training Creation Modal -->
<TrainingCreateModal OnTrainingCreated="HandleTrainingCreated" />

@code {
    private void NavigateBack()
    {
        NavigationManager.NavigateTo("/admin");
    }

    private async Task CreateNewTraining()
    {
        await ShowTrainingCreateModal();
    }

    private async Task ShowTrainingCreateModal()
    {
        await JSRuntime.InvokeVoidAsync("eval", $"new bootstrap.Modal(document.getElementById('trainingCreateModal')).show();");
    }

    private async Task HideTrainingCreateModal()
    {
        await JSRuntime.InvokeVoidAsync("eval", $"bootstrap.Modal.getInstance(document.getElementById('trainingCreateModal')).hide();");
    }

    private async Task HandleTrainingCreated(TrainingCreateRequest trainingRequest)
    {
        // For now, show success message and add to the training table
        await JSRuntime.InvokeVoidAsync("alert", $"Training '{trainingRequest.Title}' created successfully!");

        // Hide the modal
        await HideTrainingCreateModal();

        // In a real implementation, this would call the backend API to create the training
        // and refresh the training list from the database
        Console.WriteLine($"Training created: {trainingRequest.Title}");
    }

