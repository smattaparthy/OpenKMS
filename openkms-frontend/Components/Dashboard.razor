@page "/"
@rendermode InteractiveServer
@using OpenKMS.Services
@inject OpenKMS.Services.AuthService AuthService
@inject NavigationManager NavigationManager

<PageTitle>Dashboard - OpenKMS</PageTitle>

<section class="d-flex flex-column gap-4">
    <!-- Welcome Header -->
    <div class="card">
        <div class="card-body">
            <h1 class="card-title" style="font-size: var(--text-3xl);">Welcome to OpenKMS</h1>
            <p class="card-text">Enterprise Knowledge Management System</p>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card">
        <div class="card-body">
            <h2 class="card-title" style="font-size: var(--text-xl);">Quick Actions</h2>
            <div class="row g-3">
                <div class="col-12 col-sm-6 col-lg-3">
                    <button class="btn btn-secondary btn-block" @onclick="NavigateToTrainings">
                        Browse Trainings
                    </button>
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    <button class="btn btn-secondary btn-block" @onclick="NavigateToMyRegistrations">
                        My Registrations
                    </button>
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    <button class="btn btn-secondary btn-block" @onclick="NavigateToCalendar">
                        Training Calendar
                    </button>
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    <button class="btn btn-secondary btn-block" @onclick="NavigateToAdmin">
                        Settings
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    private void NavigateToTrainings()
    {
        NavigationManager.NavigateTo("/trainings");
    }

    private void NavigateToMyRegistrations()
    {
        NavigationManager.NavigateTo("/my-registrations");
    }

    private void NavigateToCalendar()
    {
        NavigationManager.NavigateTo("/calendar");
    }

    private void NavigateToAdmin()
    {
        NavigationManager.NavigateTo("/admin");
    }
}